<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/drawer_layout"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	>
	
	<FrameLayout 
		android:id="@+id/content_frame"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:background="@color/white"
		>

	    <ListView
	    	android:id="@+id/contentListView"
	    	android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	/>

        <RelativeLayout
        	android:id="@+id/emptyView"
        	android:layout_width="match_parent"
        	android:layout_height="match_parent"
        	android:background="@color/blue_deep"
            android:visibility="gone"
        	>
            <TextView
		     	android:id="@+id/emptyTextView"
		     	android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerInParent="true"
		        android:text="@string/warning_empty_list"
		        android:textSize="@dimen/warning_message_text_size"
		        android:gravity="center"
		        android:paddingLeft="@dimen/activity_horizontal_margin"
		        android:paddingRight="@dimen/activity_horizontal_margin"
		        android:textColor="@color/white"
		        />
        </RelativeLayout>
	</FrameLayout>

	<!-- Left drawer -->
	<LinearLayout
		android:id="@+id/leftLinearDrawer"
		android:layout_width="300dp"
		android:layout_height="match_parent"
		android:layout_gravity="start"
		android:divider="@color/blue"
		android:dividerHeight="4dp"
		android:background="@color/white"
		android:orientation="vertical"
		>
	    <EditText
	        android:id="@+id/addNewExpenseEditText"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:ems="10"
	        android:inputType="numberDecimal"
	        android:hint="@string/add_new_expense_hint"
	        android:textColor="@color/black"
	        android:imeOptions="actionNext"
            android:singleLine="true"
            android:textSize="@dimen/drawer_text_size"
	        />

        <EditText
            android:id="@+id/addNewExpenseCommentEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/add_new_expense_comment_hint"
            android:textColor="@color/black"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/drawer_text_size"
            android:inputType="textCapSentences"
            />
	    	
	    <Button
	        android:id="@+id/addNewExpenseButton"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/add_new_expense_button"
	        android:textColor="@color/black"
            android:textSize="@dimen/drawer_text_size"
	        />
	
        <CheckBox
	        android:id="@+id/addNewExpenseButtonCheckBox"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textColor="@color/black"
	        android:text="@string/add_new_expense_checkbox"
            android:textSize="@dimen/drawer_subtitle_size"
	        />

	</LinearLayout>
		
   <!-- Right drawer -->
   <LinearLayout
        android:id="@+id/rightLinearDrawer"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:divider="@color/blue"
        android:dividerHeight="4dp"
        android:background="@color/black"
        android:orientation="vertical"
        >
        <RelativeLayout
        	android:id="@+id/noExpenseFoundRelativeLayout"
        	android:layout_width="match_parent"
        	android:layout_height="match_parent"
        	android:visibility="gone"
        	>
        	<TextView
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="@string/no_expense_found_edit"
        		android:textSize="@dimen/row_text_size"
        		android:layout_centerInParent="true"
        		android:textColor="@color/white"
        		android:gravity="center"
        		/>
        </RelativeLayout>
		<ScrollView
		    android:id="@+id/expenseScrollView"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    >
		    <RelativeLayout
		        android:id="@+id/expenseRelativeLayout"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:paddingLeft="@dimen/activity_horizontal_margin"
		        android:paddingRight="@dimen/activity_horizontal_margin"
		        >
		        <!-- Date -->
		        <LinearLayout
		            android:id="@+id/dateLinearLayout"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:orientation="vertical"
		            android:animateLayoutChanges="true"
		            >
		            <LinearLayout
		            	android:id="@+id/dateButtonLinearLayout"
		            	android:layout_width="fill_parent"
		            	android:layout_height="wrap_content"
		            	android:orientation="horizontal"
		            	>
			            <Button
			            	android:id="@+id/dateTitleButton"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:text="@string/date_title"
			                android:textColor="@color/white"
			                android:textSize="@dimen/drawer_text_title_size"
			                android:background="@color/black"
			                />
			             <Button
                            android:id="@+id/dateButton"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="13-09-2013,Fri"
                            android:textColor="@color/white"
                            android:textSize="@dimen/drawer_text_size"
                            android:background="@color/black"
                            />
			            </LinearLayout>
		            <DatePicker
		                android:id="@+id/datePicker"
		                android:layout_width="fill_parent"
		                android:layout_height="wrap_content"
		                android:calendarViewShown="false"
		                android:spinnersShown= "true"
		                android:gravity="center"
		            />
		        </LinearLayout>
		        
		        <!-- Time -->
		        <LinearLayout
		            android:id="@+id/timeLinearLayout"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_below="@+id/dateLinearLayout"
		            android:layout_alignLeft="@+id/dateLinearLayout"
		            android:layout_alignRight="@+id/dateLinearLayout"
		            android:orientation="vertical"
		            android:layout_marginTop="@dimen/between_groups_margin"
                    android:animateLayoutChanges="true"
		            >
		            <LinearLayout
		            	android:id="@+id/timeTextLinearLayout"
		            	android:layout_width="fill_parent"
		            	android:layout_height="wrap_content"
		            	android:orientation="horizontal"
		            	>
			            <Button
			                android:id="@+id/timeTitleButton"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:text="@string/time_title"
			                android:textColor="@color/white"
			                android:textSize="@dimen/drawer_text_title_size"
			                android:background="@color/black"
			                />
			            <Button
			                android:id="@+id/timeButton"
			                android:layout_width="fill_parent"
			                android:layout_height="wrap_content"
			                android:gravity="center"
			                android:text="09:12"
			                android:textColor="@color/white"
			                android:textSize="@dimen/drawer_text_size"
			                android:background="@color/black"
			                />
		            </LinearLayout>
		            <TimePicker
		            	android:id="@+id/timePicker"
		            	android:layout_width="fill_parent"
		            	android:layout_height="wrap_content"
		            	android:gravity="center"
		            	android:visibility="gone"
		            	/>
		        </LinearLayout>
		
		        <!-- Quantity -->
		        <LinearLayout
		            android:id="@+id/quantityLinearLayout"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_below="@+id/timeLinearLayout"
		            android:layout_alignLeft="@+id/dateLinearLayout"
		            android:layout_alignRight="@+id/dateLinearLayout"
		            android:orientation="horizontal"
		            android:layout_marginTop="@dimen/between_groups_margin"
		            >
		            <TextView
		                android:id="@+id/quantityTextView"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="@string/quantity_title"
		                android:textColor="@color/white"
		                android:textSize="@dimen/drawer_text_title_size"
		                />
		            <EditText
		                android:id="@+id/quantityEditText"
		                android:layout_width="fill_parent"
		                android:layout_height="wrap_content"
		                android:gravity="center"
		                android:text="34.56"
		                android:textColor="@color/white"
		                android:textSize="@dimen/drawer_text_size"
		                android:background="@color/black"
		                android:inputType="numberDecimal"
		                android:singleLine="true"
		                />
		        </LinearLayout>
		        
		        <!-- Comment -->
		        <LinearLayout
		            android:id="@+id/commentLinearLayout"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_below="@+id/quantityLinearLayout"
		            android:layout_alignLeft="@+id/dateLinearLayout"
		            android:layout_alignRight="@+id/dateLinearLayout"
		            android:orientation="vertical"
		            android:layout_marginTop="@dimen/between_groups_margin"
		            >
		            <TextView
		                android:id="@+id/commentTextView"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="@string/comment_title"
		                android:textColor="@color/white"
		                android:textSize="@dimen/drawer_text_title_size"
		                />
		            <EditText
		                android:id="@+id/commentEditText"
		                android:layout_width="fill_parent"
		                android:layout_height="wrap_content"
		                android:gravity="left"
		                android:text="this is a very very long comment"
		                android:textColor="@color/white"
		                android:textSize="@dimen/drawer_text_size"
		                android:inputType="textMultiLine"
		                />
		        </LinearLayout>
		    </RelativeLayout>
		</ScrollView>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>